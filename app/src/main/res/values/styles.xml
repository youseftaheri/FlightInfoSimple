<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="formOuterLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>
    <style name="formInnerLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/_15sdp</item>
        <item name="android:layout_marginLeft">@dimen/_15sdp</item>
    </style>
    <style name="formHintTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/_10sdp</item>â™ 
    </style>

    <style name="formEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="formLineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:background">@color/colorGray</item>
    </style>

    <style name="defaultButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_marginTop">@dimen/_30sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:background">@drawable/custom_yellow_button</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="calendarDialogTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="defaultButton_map">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:background">@drawable/custom_yellow_button</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="CustomProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
